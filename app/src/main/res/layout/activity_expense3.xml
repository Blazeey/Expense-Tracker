<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Image2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/money"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/Textid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SavExtra"
        android:textSize="60sp"
        android:fontFamily="cursive"
        android:paddingLeft="85dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/Textid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly income"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-smallcaps"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="170dp"
        android:id="@+id/income"
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:hint="  enter your income" />
    <Button
        android:id="@+id/savebutton"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="save income"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE CATEGORY"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif-smallcaps"/>

    <Button
        android:id="@+id/next_button1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Household"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="180dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/next_button2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Shopping"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="230dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/next_button4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Bank"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="280dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/next_button3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Extras"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="330dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/next_button5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Add your own category"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="380dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/Textid310"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy spending !!"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:paddingLeft="95dp"
        android:layout_marginTop="460dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/Button61"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:text="LOG OUT"
        android:layout_marginLeft="220dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/next_button8"
        android:layout_alignStart="@+id/next_button8" />

    <Button
        android:id="@+id/next_button6"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="View balance"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/reportbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="View report"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="280dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/remainderbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Set remainder"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="340dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        />


</RelativeLayout>